<!DOCTYPE html>
<html>
  <head>
    <title>Заметки о России</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_link_tag 'logo.png' %>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">      
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>

 <!-- Подключаем CSS для Lightbox. -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" rel="stylesheet">

  
  </head>

  <body>

    <div class="m-4">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <%= link_to 'Заметки о России', root_path, class: "navbar-brand" %>
          <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
              <span class="navbar-toggler-icon"></span>
          </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
              <ul class="navbar-nav">
                <% if current_user && current_user.admin? %>
                  <li><%= link_to 'Главная страница', root_path, class: "nav-link" %></li>
                  <li><%= link_to 'Мой профиль', user_path(current_user), class: "nav-link" %></li>
                  <li><%= link_to 'Список пользователей', users_path, class: "nav-link" %></li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Заметки
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <li><%= link_to 'Создать заметку', new_post_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Мои заметки', my_posts_posts_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Опубликованные заметки', approved_posts_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Заметки на проверке', pending_posts_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Отклонённые заметки', rejected_posts_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Все заметки', posts_path, class: "dropdown-item" %></li>
                    </ul>
                  </li>
                <% elsif current_user %>
                  <li><%= link_to 'Главная страница', root_path, class: "nav-link" %></li>
                  <li><%= link_to 'Мой профиль', user_path(current_user), class: "nav-link" %></li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Заметки
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <li><%= link_to 'Создать заметку', new_post_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Мои заметки', my_posts_posts_path, class: "dropdown-item" %></li>
                      <li><%= link_to 'Опубликованные заметки', approved_posts_path, class: "dropdown-item" %></li>
                    </ul>
                  </li>
                <% else %>
                  <li><%= link_to 'Главная страница', root_path, class: "nav-link" %></li>
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Заметки
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                      <li><%= link_to 'Опубликованные заметки', approved_posts_path, class: "dropdown-item" %></li>
                    </ul>
                  </li>
                <% end %>
              </ul>
            </div>

            <ul class="navbar-nav ms-auto">
              <% if user_signed_in? %>
                <li><%= t("Привет ") + current_user.username + '!' %></li>
                <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: "nav-link" %></li>
              <% else %>
                <li><%= link_to 'Зарегистрироваться', new_user_registration_path, class: "nav-link" %></li>
                <li><%= link_to 'Войти', new_user_session_path, class: "nav-link" %></li>
              <% end %>  
            </ul>

          </div>
        </div>
      </nav>
    </div> 
    
    <div class="container">
      <div class="row">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>      
    </div>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>      
    </div>


  <!-- Подключаем JavaScript для Lightbox. -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox-plus-jquery.min.js"></script>

  </body>
</html>
