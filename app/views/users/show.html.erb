<h1>Профиль пользователя</h1>

<div class="mt-3">
	<table class="table table-striped table-bordered">
	  <tbody>
	    <tr>
	      <th scope="row">Электронная почта</th>
	      <td><%= @user.email %></td>
	    </tr>
	    <tr>
	      <th scope="row">ФИО</th>
	      <td><%= @user.full_name %></td>
	    </tr>
	    <tr>
	      <th scope="row">Имя пользователя</th>
	      <td><%= @user.username %></td>
	    </tr>
	    <tr>
	      <th scope="row">Статус пользователя</th>
	      <td><%= @user.admin? ? 'Администратор' : 'Обычный пользователь' %></td>
	    </tr>
	    <tr>
	      <th scope="row">Регион</th>
	      <td><%= @user.admin? ? 'Все регионы' : (@user.region ? @user.region.name : 'Все регионы') %></td>
	    </tr>
	  </tbody>
	</table>
</div>

<div class="mt-3">
  <%= link_to 'Редактировать', edit_user_path(@user), class: 'btn btn-primary', style: 'width: 200px; display: inline-block;' %>
</div>
