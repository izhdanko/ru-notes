<div class="container px-5 py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center">Редактирование профиля</h2>

          <%= form_for(@user, url: user_path(@user), html: { method: :patch }) do |f| %>
            <%= render "devise/shared/error_messages", resource: @user %>

            <div class="mb-3">
              <%= f.label :full_name, 'ФИО', class: 'form-label' %>
              <%= f.text_field :full_name, class: 'form-control', value: @user.full_name %>
            </div>

            <div class="mb-3">
              <%= f.label :username, 'Имя пользователя', class: 'form-label' %>
              <%= f.text_field :username, class: 'form-control', value: @user.username %>
            </div>

            <div class="mb-3">
              <%= f.label :region_id, 'Регион', class: 'form-label' %>
              <%= f.select :region_id, options_for_select(Region.all.map{ |r| [r.name, r.id] }, @user.region_id), { include_blank: 'Все регионы' }, class: 'form-select' %>
            </div>

            <div class="mb-3">
              <%= f.label :email, 'Электронная почта', class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', value: @user.email %>
            </div>

            <div class="mb-3">
              <%= f.label :password, 'Пароль', class: 'form-label' %>
              <i>(оставьте поле пустым, если вы не хотите менять пароль)</i>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <div class="form-text">
                  <em><%= @minimum_password_length %> символов минимум</em>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :current_password, 'Текущий пароль', class: 'form-label' %>
              <i>(введите текущий пароль для подтверждения изменений)</i>
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="d-grid">
              <%= f.submit "Обновить", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <div class="mt-4">
            <h3>Удаление профиля</h3>
            <p>Вы действительно хотите удалить профиль <%= @user.full_name %>?</p>
            <%= button_to "Удалить профиль", user_path(@user), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-danger' %>
          </div>

          <div class="mt-3">
            <%= link_to "Назад", :back, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
