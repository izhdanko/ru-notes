<div class="container px-5 py-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <h2 class="text-center">Регистрация</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :email, 'Электронная почта', class: 'form-label' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mb-3' %>
            </div>

            <div class="field">
              <%= f.label :full_name, 'ФИО', class: 'form-label' %><br />
              <%= f.text_field :full_name, class: 'form-control mb-3' %>
            </div>

            <div class="field">
              <%= f.label :username, 'Имя пользователя', class: 'form-label' %><br />
              <%= f.text_field :username, class: 'form-control mb-3' %>
            </div>

            <div class="field">
              <%= f.label :region_id, 'Регион', class: 'form-label' %><br />
              <%= f.select :region_id, options_for_select(Region.all.map{ |r| [r.name, r.id] }), { include_blank: true }, { class: 'form-select mb-3' } %>
            </div>

            <div class="field">
              <%= f.label :password, 'Пароль', class: 'form-label' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> символов минимум)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mb-3' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, 'Подтверждение пароля', class: 'form-label' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-3' %>
            </div>

            <div class="actions mt-3">
              <%= f.submit "Зарегистрироваться", class: 'btn btn-primary w-100' %> <!-- ширина кнопки по всей карточке -->
            </div>
          <% end %>

          <div class="mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>